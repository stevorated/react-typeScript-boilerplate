{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2017", "es2015"],
        // "allowJs": true,
        // "checkJs": true, // Type checking
        "jsx": "react",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        // "baseUrl": "./",
        "outDir": "./dist",
        "rootDir": "./server",
        // "paths": {},
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "**/*.spec.ts", "junk", "src"]
}
