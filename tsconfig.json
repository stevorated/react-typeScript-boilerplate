{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["dom", "es2017", "es2015"],
        "allowJs": false,
        "jsx": "react",
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {},
        "types": ["react"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "**/*.spec.ts", "junk"]
}
